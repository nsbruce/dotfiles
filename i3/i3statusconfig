order += "volume master"
volume master {
  format = "🔊 (%volume)"
  format_muted = "🔇 (%volume)"
  device = "default"
}

order += "tztime utc"
tztime utc {
  format = "%Y-%m-%dT%H:%M:%S"
  timezone = "UTC"
}


order += "memory"
memory {
  format = "🐏 %used/%total"
  threshold_degraded = "10%"
  format_degraded = "MEMORY: %free"
}

order += "disk /"
disk "/" {
  format = "💾 (%free)"
}

order += "tztime local"
tztime local {
  format = "%H:%M"
}