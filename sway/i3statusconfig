general {
  output_format = "i3bar"
  colors = true
  color_good = "#50FA7B"
  color_degraded = "#F1FA8C"
  color_bad = "#FF5555"
}


# order += “cpu_usage”
# cpu_usage {
#   format = “CPU %usage”
#   max_threshold = 75
# }

order += "wireless _first_"
wireless _first_ {
  format_up = "🛜 (%quality at %essid, %bitrate) %ip"
  format_down = ""
}

order += "ethernet _first_"
ethernet _first_ {
  format_up = "🌐 %ip (%speed)"
  format_down = ""
}

order += "battery 0"
battery 0 {
  format = "%status %percentage %remaining %emptytime"
  format_down = ""
  status_chr = "⚡"
  status_bat = "🔋"
  status_unk = "? UNKNOWN"
  status_full = "🥛"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
  integer_battery_capacity = true
}

order += "volume master"
volume master {
  format = "🔊 (%volume)"
  format_muted = "🔇 (%volume)"
  device = "default"
}

order += "tztime utc"
tztime utc {
  format = "%Y-%m-%dT%H:%M:%S"
  timezone = "UTC"
}


order += "memory"
memory {
  format = "🐏 %used/%total"
  threshold_degraded = "10%"
  format_degraded = "MEMORY: %free"
}

order += "disk /"
disk "/" {
  format = "💾 (%free)"
}

order += "tztime local"
tztime local {
  format = "%H:%M"
}
